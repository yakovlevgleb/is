.videogalery {
	margin-bottom: 65px;

	.wrapper {
		position: relative;
	}

	&__over {
		display: inline-block;
		vertical-align: top;
		position: relative;
		font-size: 0;
		line-height: 0;
		margin-bottom: 23px;

		&:hover {
			&::before {
				opacity 1;
			}
		}

		&::before {
			content: '';
			position: absolute;
			left: 0;
			top: 0;
			right: 0;
			bottom: 0;
			background-color: rgba(0,0,0, .6);
			opacity 0;
			transition: .5s opacity;
		}

		&::after {
			content: '';
			position: absolute;
			left: 50%;
			top: 50%;
			width: 80px;
			height: 80px;
			transform: translate(-50%, -50%);
			background-image: url('../i/play-ico.png')
		}
	}

	&__img {
		max-width 100%;
	}

	&__title {
		font-size: 20px;
		line-height: 32px;
		font-weight: 900;
		color: $title-color;
	}

	.swiper-wrapper {
		position: relative;
	}

	.swiper-nav-container {
		position: absolute;
		top: 20px;
		right: 0;
		width: 80px;
    height: 20px;
	}

	.swiper-button-next {
		background-image: url('data:image/png;base64,');
		width: 29px;
		height: 20px;
		right: 0;
		background-size: cover;
		margin: 0;
		outline: none;
		transition: background .5s;
		transform: translateY(-50%);

		&:hover {
			background-image: url('data:image/png;base64,');
		}
	}

	.swiper-button-prev {
		background-image: url('data:image/png;base64,');
		width: 29px;
		height: 20px;
		left: 0;
		background-size: cover;
		margin: 0;
		outline: none;
		transform: translateY(-50%) rotate(180deg);
		transition: background .5s;

		&:hover {
			background-image: url('data:image/png;base64,');
		}
	}
}

@media only screen and (max-width: 1441px) {
	.videogalery {
		.swiper-nav-container {
			right: 30px;
		}
	}
}

@media only screen and (max-width: 767px) {
	.videogalery {
		.swiper-nav-container {
			width 65px;
			top: 6px;
		}

		&__over {
			display: block;
			&::after {
				transform: translate(-50%, -50%) scale(.75);
			}
		}

		&__img {
			width 100%;
			max-width: inherit;
		}
	}
}
