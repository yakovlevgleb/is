.intro {
	background-image: url('../../img/index-bg.jpg');
	background-position: center top;
	background-repeat: no-repeat;
	position: relative;
	margin-top: -142px;
	padding-top: 142px;
	height: 100vh;
  overflow-x: hidden;

	&:before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		right: 0;
		bottom: 0;
		background-color: rgba(0,0,0,.7);
	}

	.wrapper {
		height: 100%;
		z-index: 1;
		position: relative;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	&__slider-inner {
		display: flex;
		flex-direction: row;
	}

	&__slider-numb {
		font-size: 14px;
		line-height: 18px;
		color: $white;
		letter-spacing: 1.12px;
		font-weight: 600;
		margin-right: 42px;
		display inline-block;
	}

	&__slider-text {
		display: flex;
		flex-direction: column;
	}

	&__slider-title {
		font-size: 60px;
		line-height: 60px;
		font-weight: 800;
		color: $white;
		margin-bottom: 40px;
		max-width: 732px;
	}

	&__slider-href {
		font-size: 18px;
		line-height: 21px;
		color: $white;
		font-weight: 600;
		position: relative;
		display inline-block;
		margin-left: -23px;
		visibility: hidden;
		transition: visibility .5s;
		margin-top: 1px;

		&::after {
			content: '';
			position: relative;
			display: inline-block;
			line-height: 30px;
			margin-left: 10px;
			width: 19px;
			height: 13px;
			margin-top: 1px
			background-image: url('data:image/png;base64,');
		}
	}

	&__carousel {
		.swiper-container {
			overflow: visible;
		}

		.swiper-wrapper {
			-webkit-transition: all 600ms cubic-bezier(0.34, 0.59, 0.42, 1.12)
			        transition: all 600ms cubic-bezier(0.34, 0.59, 0.42, 1.12)
		}

		.swiper-slide {
			width: auto;
			opacity: .3;
			transition: opacity .5s;
		}

		.swiper-slide-active {
			opacity: 1;

			.intro__slider-href {
				visibility: visible;
			}
		}
	}

	&__footer {
		align-self: flex-end;
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		width: 100%;
		padding-bottom: 96px;

		^[0]__sizer {
			width: calc(100% / 3);
		}
	}

	&__slide-down {
		width: calc(100% / 3);
		font-size: 14px;
		line-height: 18px;
		text-transform: uppercase;
		color: $white;
		font-weight: 600;
		letter-spacing: 1.12px;
		text-align: center;
		align-self: flex-end;
	}

	&__phones {
		width: calc(100% / 3);
		display: flex;
		flex-direction: column;
		align-items: flex-end;
	}

	&__phones-href {
		font-size: 14px;
		line-height: 18px;
		font-weight: 600;
		color: $white;
		letter-spacing: 1.12px;
		margin-bottom: 25px;

		&:last-child {
			margin-bottom: 0;
		}
	}

	&__slider-nav {
    width: calc(100% / 3);
		display: flex;
		flex-direction: row;
		align-self: flex-end;
	}

	&__slider-nav-prev {
		font-size: 0;
		line-height: 0;
		width: 24px;
		height: 18px;
		transform: rotate(180deg);
		background-repeat: no-repeat;
		background-position: center;
		margin-right: 30px;
		cursor: pointer;
		background-image: url('data:image/png;base64,');
		transition: opacity .5s;

		&:hover {
			opacity: .7;
		}
	}

	&__slider-nav-next {
		font-size: 0;
		line-height: 0;
		width: 24px;
		height: 18px;
		background-repeat: no-repeat;
		background-position: center;
		cursor: pointer;
		background-image: url('data:image/png;base64,');
		transition: opacity .5s;
		margin-top: -1px;

		&:hover {
			opacity: .7;
		}
	}
}

@media only screen and (max-width: 1441px) {
	.intro {
		&__slider-title {
			font-size: 48px;
			line-height: 48px;
		}

		&__footer {
			padding-bottom: 35px;
		}
	}
}

@media only screen and (max-width: 1023px) {
	.intro {
		&__carousel {
			.swiper-container {
				overflow: hidden;
			}
			.swiper-slide {
				width: 100%;
			}
		}
		&__slider-title {
			max-width: inherit;
			white-space: pre-wrap;
			width: 100%;
		}
	}
}


@media only screen and (max-width: 767px) {
	.intro {
    margin-top: -122px;
    padding-top: 122px;

		&__carousel {
			.swiper-container {
				overflow: hidden;
			}
			.swiper-slide {
				width: 100%;
			}
		}

		&__slider-title {
	    font-size: 30px;
	    line-height: 34px;
			margin-bottom: 20px;
		}

		&__slider-href {
			font-size: 16px;
			line-height: 18px;
		}

		&__phones {
			display: none;
		}

		&__slider-inner {
			flex-direction: column;
		}

		&__slider-numb {
			margin-right: 0;
			margin-bottom: 10px;
		}

		&__slider-href {
			margin-left: 0;
		}
	}
}

@media (max-width: 480px) {
	.intro {
		&__slide-down {
			display none
		}
	}
}
