.reviews {
	margin-bottom: 90px;

	&--page {
		.reviews{
			&__list{
				margin-bottom -50px;
			}
			&__item {
				margin-bottom: 100px;

				&:nth-child(3n+2) {
					margin-bottom: 50px;
				}
			}
		}
	}

	&__title {
		display: flex;
		flex-direction: row;
		margin-bottom: 50px;

		h2:not([class]) {
			margin-bottom: 0;
			margin-right: 40px;
		}
	}

	&__list {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		flex-wrap: wrap;
		position: relative;

		&:after {
			content: '';
			width: calc(100%/3 - 21px);
			height: 0;
			padding: 0;
			margin: 0;
		}
	}

	&__item {
		width: calc(100%/3 - 21px)

		&:nth-child(3n+2) {
			margin-top: 50px;
		}
	}

	&__href {
		line-height: 0;
		font-size: 0;
		display inline-block;
		background-color: $bg-color;
		padding: 30px;
		transition: background .5s;

		&:hover {
			background-color: $green;
		}

		img {
			max-width: 100%;
		}
	}
}


@media only screen and (max-width: 767px) {
	.reviews {
		margin-bottom: 50px;

		&--page {
			.reviews{
				&__item {
					margin-bottom: 50px;

					&:nth-child(3n+2) {
						margin-top: 0;
						margin-bottom: 50px;
					}
				}
			}
		}

		&__list {
			align-items: flex-start;

			&:after {
				content: none;
				display: none;
			}
		}

		&__title {
			flex-wrap: wrap;
			flex-direction: column;

			h2:not([class]) {
				margin-right: 0;
				margin-bottom: 10px;
			}

			.more {
				align-self: flex-start;
			}
		}

		&__item {
			width: calc(100%/2 - 21px)
			margin-bottom: 30px;

			&:nth-child(3) {
				display none
			}
		}

		&__href {
			width: 100%;

			img {
				width: 100%
			}
		}
	}
}

@media only screen and (max-width: 550px) {
	.reviews {
		&__list {
			flex-direction: column
		}

		&__item {
			width: 100%
			&:nth-child(2) {
				margin-top 0
			}
			&:nth-child(3) {
				display block
			}
		}
	}
}
