.navigation {
	justify-content: center;
	flex-direction: column;

	&__list {
		display: flex;
		flex-direction: row;
		list-style: none;
	}

	&__item {
		&.active {
			& ^[0]__href {
				background-color: $green;
			}
		}

		&--search {
			margin-left: 10px;
			line-height: 1;

			.open {
				opacity: .5;
			}
		}
	}

	.search-btn {
		width: 16px;
		height: 30px;
		background-repeat: no-repeat;
		background-position: center;
		background-image: url('data:image/png;base64,');
		border: none;
		background-color: $trn;
		outline-color: $trn;
		transition opacity .4s
		cursor: pointer;

		&:hover {
			opacity: .5;
		}
	}

	&__href {
		font-size: 14px;
		line-height: 18px;
		font-weight: 600;
		letter-spacing: 1.12px;
		color: $white;
		text-transform: uppercase;
	}
}


@media only screen and (min-width: 1024px) {
	.navigation {
		display: flex!important;
	}
}

@media only screen and (max-width: 1023px) {
	.navigation {
		display: none;
		position: fixed;
		overflow-x: hidden;
		overflow-y: auto;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: $green;
		z-index: 100;
		justify-content: center;

		&__list {
			flex-direction: column;
			height: 100%;
			width: 100%;
			align-items: center;
			justify-content: center;
		}

		&__item {
			margin-bottom: 20px;

			&.active {
				& ^[0]__href {
					background-color: transparent;
					border-bottom: 1px solid $white;
				}
			}

			&--search {
				margin-left: 0;
			}

			.search-btn {
				display: none;
			}
		}
	}
}
