.footer {
	background-color: $foter-bg;
  padding-top: 69px;
  padding-bottom: 68px;

	.search {
		bottom: -7px;
		right: -1px;
	}

	&__top {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		margin-bottom: 44px;
	}

	&__bottom {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
	}

	&__nav-list {
		display: flex;
		flex-direction: row;
	}

	&__column {
		display: flex;
		flex-direction: column;
		position: relative;
	}

	&__nav-item {
		margin-right: 38px;

		&:last-child {
			margin-right: 0;
		}

		&.active {
			.footer__nav-link {
				border: none;
			}
		}
	}

	&__nav {
		margin-bottom: 28px;
	}

	&__nav-link {
		font-size: 14px;
		line-height: 18px;
		font-weight: 600;
		color: $white;
		text-transform: uppercase;
		border-bottom: 1px solid rgba(255,255,255,0.4);
		transition: .5s border-color;
    letter-spacing: 1.12px;

		&:hover {
			border-color: $trn;
		}
	}

	&__phones {
		display: flex;
		flex-direction: row;
		align-items: flex-end
	}

	&__phones-link {
		font-size: 14px;
		line-height: 18px;
		color: $white;
		font-weight: 600;
		margin-right: 38px;
		letter-spacing: 1.12px;

		&:last-child {
			margin-right: 0;
		}
	}

	&__copyrights {
		font-size: 18px;
		line-height: 1;
		font-weight: normal;
		color: $white;
	}

	.search-btn {
		width: 16px;
		height: 30px;
		background-repeat: no-repeat;
		background-position: center;
		background-image: url('data:image/png;base64,');
		border: none;
		background-color: $trn;
		outline-color: $trn;
		cursor: pointer;
		display: inline-block;
		vertical-align: top;

		&.open {
		  opacity: 0.5;
		}
	}
}

@media only screen and (max-width: 1023px) {
	.footer {
		&__top {
			justify-content: flex-start;
			flex-direction: column;
			margin-bottom: 10px;

			.logo {
				align-self: flex-start;
				margin-bottom: 30px;
			}
		}

		&__nav {
			margin-bottom: 10px;
		}

		&__nav-list {
			flex-wrap: wrap;
		}

		&__nav-item {
			margin-bottom: 20px;

			&--search {
				display: none;
			}
		}

		&__copyrights {
			margin-bottom: 30px;
			align-self: flex-start;
		}

		&__bottom {
			flex-direction: column;
		}

		&__phones-link {
			margin-bottom: 20px;
		}

		&__phones {
			flex-wrap: wrap;
		}

		.search {
			display: none;
		}
	}
}

@media only screen and (max-width: 767px) {
	.footer {
		padding-top: 50px;
		padding-bottom: 50px;
	}
}
