.input {
	line-height: 30px;
	font-size: 18px;
	border: none;
	border-bottom: 2px solid $form-border;
	color: $main-text;
	box-shadow: none;
	background-color: $trn;
	outline-color: transparent;
	font-family: 'Proxima Nova';
	border-radius: 0;
	padding: 0;
	height: 30px;

	&::-webkit-input-placeholder {
	  color: $title-color-hover;
	}
	&::-moz-placeholder {
	  color: $title-color-hover;
	}
	&:-ms-input-placeholder {
	  color: $title-color-hover;
	}
	&:-moz-placeholder {
	  color: $title-color-hover;
	}

	&.warning {
		border-color: $warning;
	}
}
