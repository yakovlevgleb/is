.pseudocheckbox {
	position: relative;
	&__checkbox {
		position: absolute;
		left: 0;
		top: 0;
		width: 0;
		height: 0;

		opacity: 0;
		border-radius: 0;
		background-color: transparent;

		&:checked {
			& + .pseudocheckbox__label {
				&:after {
					opacity: 1;
				}
			}
		}
	}

	&__label {
		position: relative;

		padding-left: 37px;

		cursor: pointer;

		color: $main-text;

		font-size: 18px;
		font-weight: normal;
		line-height: 24px;
		font-weight: normal;

		display: inline-block;
		vertical-align: top;

		&.warning {
			&:before {
				border-color: $warning;
			}
		}

		a {
			transition: border-color 0.5s;

			color: $main-text ;
			border-bottom: 1px solid $title-color-hover;

			font-size: 18px;
			font-weight: normal;
			line-height: 24px;

			&:hover {
				border-color: transparent;
			}
		}

		&:before {
			position: absolute;
			top: -1px;
			bottom: 50%;
			left: 0;

			width: 24px;
			height: 24px;

			border: 3px solid $form-border;

			content: '';
			transition: 0.5s background, 0.5s border-color;

			background-color: $white;
		}

		&:after {
			position: absolute;
			top: 6px;
			left: 5px;

			width: 14px;
			height: 10px;

			content: '';
			transition: opacity 0.5s;

			opacity: 0;
			background-image: url('data:image/png;base64,');
		}
	}
}
