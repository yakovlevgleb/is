.search {
	position: absolute;
	bottom: -32px;
	padding-left: 15px;
	padding-right: 15px;
	right: -1px;
	background-color: $green;
	width: 261px;
	display: flex;
	flex-direction: row;
	visibility: hidden;
	opacity: 0;
	transition: visibility .5s, opacity .5s;

	&.active {
		visibility: visible;
		opacity: 1;
	}

	&__input {
		background-color: $trn;
		border: none;
		box-shadow: none;
		border-radius: 0;
		outline-color: $trn;
		font-size: 18px;
		line-height: 30px;
		color: $white;
		font-weight: normal;
		opacity: 1;
		width: 100%;
		height: 32px;

		&::-webkit-input-placeholder {
			color: $white;
		}

		&::-moz-placeholder {
			color: $white;
		}

		&:-ms-input-placeholder {
			color: $white;
		}

		&:-moz-placeholder {
			color: $white;
		}
	}

	&__btn {
		width: 19px;
		background-color: $trn;
		border: none;
		box-shadow: none;
		opacity: 1;
		cursor: pointer;
		border-radius: 0;
		outline-color: $trn;
		background-repeat: no-repeat;
		background-position: center;
		background-image: url('data:image/png;base64,');
	}
}

@media only screen and (max-width: 1441px) {
	.search {
		right: 29px;
	}
}

@media only screen and (max-width: 1023px) {
	.search {
		visibility: visible;
		opacity: 1;
		position: static;
		border-bottom: 2px solid $white;
		background-color: transparent;
	}
}
