.specialize {
	padding-top: 69px;
	padding-bottom: 30px;
	position: relative;
	overflow: hidden;

	&::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		width: 100vw;
		height: 100%;
		background-color: $specialize-bg;
		z-index: -1;
	}

	&__text {
		max-width: 867px;
		font-size: 18px;
		line-height: 30px;
		color: $service-text-color;
		font-weight: normal;
		margin-bottom: 82px;
	}

	&__list {
		padding: 0;

		list-style: none;

		margin-top 0;
		margin-bottom: 0;

		counter-reset: number;

		display: flex;
		flex-wrap: wrap;
	}

	&__item {
		width calc(100% / 3 - 40px);

		padding-left: 27px;
		margin-right: 60px;

		position: relative;

		margin-bottom 74px;

		color: $title-color;

		font-size: 18px;
		font-weight: normal;
		line-height: 30px;

		display: flex;
		flex-direction: column;
		align-items: center;

		&:nth-child(3n + 3) {
			margin-right 0;
		}

		&:before {
			position: absolute;
			left: 0;
			top: 156px;

			content: counters(number, ".") ".";
			counter-increment: number;

			color: $list;

			font-size: 18px;
			line-height: 30px;
			font-weight: 800;
		}
	}

	&__item-img {
		align-self: center;
		margin-bottom 40px;
	}

	&__item-text {
		padding-top: 32px;
		border-top: 1px solid $form-border;
		max-width: 100%;
	}
}

@media only screen and (max-width: 767px) {
	.specialize {
		&__item {
			width: calc(100% / 2 - 25px);
			margin-right: 25px;

			&:nth-child(3n + 3) {
				margin-right: 25px;
			}

			&:nth-child(2n + 2) {
				margin-right: 0;
			}
		}
	}
}

@media only screen and (max-width: 550px) {
	.specialize {
		&__item {
			width: calc(100%);
			margin-right: 0;

			&:nth-child(3n + 3) {
				margin-right: 0;
			}

			&:nth-child(2n + 2) {
				margin-right: 0;
			}
		}
	}
}
